{
  "name": "haijunit",
  "version": "5.0.0",
  "description": "导航|文档|笔记|记录|组件库",
  "main": "index.js",
  "private": "true",
  "scripts": {
    "clean": "pnpm run --stream -r clean",
    "build": "pnpm run --stream -r build",
    "site": "bash scripts/deploy.sh",
    "release": "pnpm clean && pnpm build && pnpm site",
    "docs:dev": "pnpm -C docs dev",
    "docs:build": "pnpm -C docs build"
  },
  "author": "zhanghaijun",
  "homepage": "https://gitee.com/haijunit",
  "repository": {
    "type": "git",
    "url": "git+https://gitee.com/haijunit/mark-web"
  },
  "license": "MIT",
  "keywords": [
    "vitepress",
    "plugins",
    "component"
  ],
  "workspaces": [
    "packages/*",
    "docs/"
  ],
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.7.2",
    "element-plus": "^2.7.3",
    "vue": "^3.4.27"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@vitejs/plugin-vue": "^5.0.4",
    "esbuild": "^0.21.4",
    "kolorist": "^1.8.0",
    "minimist": "^1.2.8",
    "sass": "^1.77.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vue-tsc": "^2.0.19"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "search-insights"
      ]
    }
  },
  "lint-staged": {
    "{docs, packages}/**/*.{js,ts,vue,jsx,tsx,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
