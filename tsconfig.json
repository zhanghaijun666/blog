/* Visit https://aka.ms/tsconfig to read more about this file */
{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "allowJs": false,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "types": ["node"],
    "lib": ["ESNext", "DOM"],
    "paths": {
      "@haijunit/*": ["packages/*"]
    },
    "strict": true // 严格模式
  },
  "include": ["src/**/*.ts", "packages/**/*.vue", "scripts/**/*.ts"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
